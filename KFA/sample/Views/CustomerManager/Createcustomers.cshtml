@model sample.Models.CustomerModel
@{
    ViewBag.Title = "Create Customers";
}
<div class="col-lg-12">
<div class="panel panel-default">
    <div class="panel-heading"><h4>Create Customers</h4></div>
    <div class="panel-body">
            @using (Ajax.BeginForm("Createcustomers", "CustomerManager", new AjaxOptions { HttpMethod = "post" }))
            {
                @Html.LabelFor(x => x.Title)
                <br />
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control  input-lg" })
                @Html.ValidationMessageFor(model => model.Title)
                <br />
                @Html.LabelFor(x => x.FullName)
                <br />
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control  input-lg" })
                 @Html.ValidationMessageFor(model => model.FullName)
                <br />
                @Html.LabelFor(x => x.Adress)
                <br />
                @Html.TextAreaFor(model => model.Adress, new { @class = "form-control  input-lg" })
                @Html.ValidationMessageFor(model => model.Adress)
                <br />
                @Html.LabelFor(x => x.EmailAdress)
                <br />
                @Html.TextBoxFor(model => model.EmailAdress, new { @class = "form-control  input-lg" })
                @Html.ValidationMessageFor(model => model.EmailAdress)

                <br />
                @Html.LabelFor(x => x.PhoneNumber)
                <br />
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control  input-lg" })
                @Html.ValidationMessageFor(model => model.EmailAdress)

                <br />
                <input type="submit" value="Create" class="btn btn-kfa form-control" />

            }
        </div>
        </div>
    </div>
    </div>
